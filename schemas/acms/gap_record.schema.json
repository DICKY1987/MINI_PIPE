{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://acms.example.com/schemas/gap_record.schema.json",
  "title": "Gap Record",
  "description": "Schema for a single gap record in ACMS",
  "type": "object",
  "required": ["gap_id", "title", "description", "category", "severity", "status", "file_paths"],
  "properties": {
    "gap_id": {
      "type": "string",
      "pattern": "^GAP_[A-Z0-9_]+$"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "minLength": 10
    },
    "category": {
      "type": "string",
      "enum": ["documentation", "testing", "error_handling", "code_quality", "security", "performance", "maintainability", "architecture"]
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "info"]
    },
    "status": {
      "type": "string",
      "enum": ["discovered", "planned", "in_progress", "resolved", "verified", "closed", "wont_fix"]
    },
    "file_paths": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string", "pattern": "^GAP_[A-Z0-9_]+$"},
      "default": []
    }
  }
}
